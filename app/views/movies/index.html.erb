<h1> Movies </h1>
<form action="/movies" method="get">
    <input type="text" name="search">
    <button>Search</button>
</form>
<br>
<% @results.each do |movie| %>
    <p><%= movie.title %>
        <%= button_to "Savor it", create_movie_path(
        :title => movie.title,
        :year => movie.year,
        :director => movie.director,
        :plot => movie.plot,
        :mpaa_rating => movie.mpaa_rating,
        :actors => movie.cast_members[0,3],
        :favorite => false)%>

        <%= button_to "Favor-it",
        create_movie_path(
        :title => movie.title,
        :year => movie.year,
        :director => movie.director,
        :plot => movie.plot,
        :actors => movie.cast_members[0,3],
        :mpaa_rating => movie.mpaa_rating,
        :favorite => true)%>

<% end %>
    </p>
<p> Favored Movies: </p>
    <% if @favorites %>
        <% @favorites.each do |movie| %>
            <ul>
                <%= link_to movie.title.to_s, movie_path(movie)%>
            </ul>
        <% end %>
    <% else %>
        <p> My, such high standards you have</p>
    <% end %>

